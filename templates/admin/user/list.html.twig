{% extends 'base.html.twig' %}

{% block title %}User - list{% endblock %}
{% block header %}User - list{% endblock %}

{% block content %}
	<div class="row mb-3">
		<div class="col">
			<a href="{{ path('app_admin_user_create') }}" class="btn btn-secondary float-end btn-sm">add new</a>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<div class="rounded-3 border border-dark p-1">
				<table class="table table-light table-striped table-hover mb-0">
					<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Email</th>
						<th scope="col">Name</th>
						<th scope="col">Verified</th>
						<th scope="col">Roles</th>
					</tr>
					</thead>
					<tbody>
					{% for row in list %}
						<tr>
							<th scope="row">{{ row.id }}</th>
							<td>{{ row.email }}</td>
							<td>{{ row.name }}</td>
							<td>{{ row.verified }}</td>
							<td>{{ row.roles|join(', ') }}</td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
